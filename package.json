{
  "name": "mu",
  "version": "0.1.0",
  "description": "simplify the declaration and administration of the AWS resources necessary to support microservices.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stelligent/mutato.git"
  },
  "bin": {
    "mu": "bin/mu.js"
  },
  "scripts": {
    "build": "npm-run-all lint:check compile",
    "watch": "tsc -w",
    "compile": "tsc",
    "test": "nyc mocha test/**/*.test.ts",
    "lint:check": "prettier --check {lib,bin,test}/**/*.ts",
    "lint:write": "prettier --check --write {lib,bin,test}/**/*.ts"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.21.1",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "10.17.5",
    "aws-cdk": "^1.21.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "choma": "^1.2.1",
    "mocha": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.7.2"
  },
  "dependencies": {
    "@aws-cdk/core": "^1.21.1",
    "@types/bluebird": "^3.5.29",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^8.0.1",
    "@types/lodash": "^4.14.149",
    "@types/nunjucks": "^3.1.3",
    "bluebird": "^3.7.2",
    "debug": "^4.1.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "nunjucks": "^3.2.0"
  },
  "mocha": {
    "bail": true,
    "fullTrace": true,
    "recursive": true,
    "inlineDiffs": true,
    "require": [
      "choma",
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage",
      "test",
      "bin"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true
  }
}
