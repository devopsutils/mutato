{
  "name": "mu",
  "version": "0.1.0",
  "description": "simplify the declaration and administration of the AWS resources necessary to support microservices.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stelligent/mutato.git"
  },
  "bin": {
    "mu": "bin/mu.js"
  },
  "scripts": {
    "build": "npm-run-all lint:write compile:emit",
    "clean": "git clean -xdff -e node_modules",
    "lint": "npm-run-all compile:check lint:check",
    "test": "DEBUG='mu*' npm-run-all build test:mocha",
    "compile:emit": "tsc",
    "compile:check": "tsc --noEmit",
    "test:mocha": "nyc mocha test/**/*.test.ts 2>npm-test.log",
    "lint:check": "eslint --quiet {lib,bin,test}/**/*.ts",
    "lint:write": "eslint --quiet --fix {lib,bin,test}/**/*.ts",
    "docs:serve": "docsify serve docs",
    "cdk:destroy": "DEBUG='mu*' npx cdk destroy --verbose Mu-Pipeline*",
    "cdk:deploy": "DEBUG='mu*' npx cdk deploy --verbose Mu-Pipeline*",
    "cdk:synth": "DEBUG='mu*' npx cdk synth --verbose -o dist"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.30.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/ms": "^0.7.31",
    "@types/node": "13.9.3",
    "@types/nunjucks": "^3.1.3",
    "@types/parse-github-url": "^1.0.0",
    "@types/rc": "^1.1.0",
    "@types/traverse": "^0.6.32",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "choma": "^1.2.1",
    "docsify-cli": "^4.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "typescript": "~3.8.3"
  },
  "dependencies": {
    "@aws-cdk/app-delivery": "^1.30.0",
    "@aws-cdk/aws-codebuild": "^1.30.0",
    "@aws-cdk/aws-codepipeline": "^1.30.0",
    "@aws-cdk/aws-codepipeline-actions": "^1.30.0",
    "@aws-cdk/aws-dynamodb": "^1.30.0",
    "@aws-cdk/aws-ec2": "^1.30.0",
    "@aws-cdk/aws-ecr": "^1.30.0",
    "@aws-cdk/aws-ecs": "^1.30.0",
    "@aws-cdk/aws-ecs-patterns": "^1.30.0",
    "@aws-cdk/aws-iam": "^1.30.0",
    "@aws-cdk/aws-rds": "^1.30.0",
    "@aws-cdk/aws-s3": "^1.30.0",
    "@aws-cdk/aws-sqs": "^1.30.0",
    "@aws-cdk/core": "^1.30.0",
    "aws-cdk": "^1.30.0",
    "debug": "^4.1.1",
    "lodash": "^4.17.15",
    "ms": "^2.1.2",
    "nunjucks": "^3.2.1",
    "parse-github-url": "^1.0.2",
    "parse-strings-in-object": "^2.0.0",
    "rc": "^1.2.8",
    "source-map-support": "^0.5.16",
    "traverse": "^0.6.6",
    "yaml": "^1.8.3"
  },
  "mocha": {
    "bail": true,
    "fullTrace": true,
    "recursive": true,
    "inlineDiffs": true,
    "require": [
      "choma",
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": false
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "plugin:jsdoc/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "jsdoc/require-param-type": 0,
      "jsdoc/require-returns-type": 0,
      "@typescript-eslint/camelcase": 0
    },
    "settings": {
      "jsdoc": {
        "mode": "typescript"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
